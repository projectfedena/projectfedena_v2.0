    <div class="label-container"><label>Amount :</label> </div>
    <div class="input-container"><%= f.text_field :amount %></div>
   </div>
 <div class="label-field-pair">
    <div class="label-container"><label>Make Asset Inactive ?</label> </div>
    <div class="input-container"><%= f.check_box :is_inactive %></div>
   </div>


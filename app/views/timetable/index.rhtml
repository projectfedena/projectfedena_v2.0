<div id="content-header">
  <img src="/images/show_timetable.png" />
  <h1>Timetable</h1>
  <h3>Home</h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">
    <%if permitted_to? :edit,:timetable%>
      <div class="link-box">
        <% @config = Configuration.available_modules %>
        <% if @config.include?('HR') %>
          <div class="link-heading"><%= link_to "Create/Edit Timetable", :action => "select_class2" %></div>
        <% else %>
          <div class="link-heading"><%= link_to "Create/Edit Timetable", :action => "select_class" %></div>
        <% end %>
        <div class="link-descr">Select a class and edit the timetable for that class.</div>
      </div>

      <div class="link-box">
        <div class="link-heading"><%= link_to "Set class timings", :controller => "class_timings", :action => "index"   %></div>
        <div class="link-descr">Select a class and edit the timetable for that class.</div>
      </div>
    <%  end%>


    <%  if permitted_to? :view,:timetable%>
      <div class="link-box">
        <div class="link-heading"><%= link_to "View Timetables", :action => "view" %></div>
        <div class="link-descr">View the timetable for a class.</div>
      </div>

    <%  end%>
    <%  if permitted_to? :edit,:timetable%>
      <% @config = Configuration.get_config_value('StudentAttendanceType') %>
      <% if @config == 'SubjectWise' %>
        <div class="link-box">
          <div class="link-heading"><%= link_to "Swap class", :action => "extra_class" %></div>
          <div class="link-descr">Generate period entry for a given time</div>
        </div>
      <%  end %>
    <%  end %>

    <div class="link-box">
      <div class="link-heading"><%= link_to "Institutional Timetable", :action => "timetable" %></div>
      <div class="link-descr">View the entire timetable for a day</div>
    </div>
    <%  if permitted_to? :edit,:timetable%>
      <div class="link-box">
        <div class="link-heading"><%= link_to "Create weekdays", :controller => "weekday", :action => "index" %></div>
        <div class="link-descr">Create weekdays</div>
      </div>
    <% end %>
    <div class="extender"></div>
  </div>
</div>